<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ocean_fields_ext.fiscal_year_tree" model="ir.ui.view">
        <field name="name">fiscal.year.tree</field>
        <field name="model">fiscal.year</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                
            </tree>
        </field>
    </record>

    <record id="ocean_fields_ext.fiscal_year_form" model="ir.ui.view">
        <field name="name">fiscal.year.form</field>
        <field name="model">fiscal.year</field>
        <field name="arch" type="xml">
            <form string="Sub types">
                <sheet>
                <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="month_name"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
        
    </record>


    <!-- Action definition -->
    <record id="action_fiscal_year" model="ir.actions.act_window">
        <field name="name">fiscal.year</field>
        <field name="res_model">fiscal.year</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item definition -->
    <menuitem id="menu_fiscal_year" name="Fiscal Year" parent="crm.crm_menu_config" action="action_fiscal_year" sequence="11"/>
</odoo>
