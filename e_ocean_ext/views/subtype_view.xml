<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="e_ocean_ext.subtype_tree" model="ir.ui.view">
        <field name="name">subtype.tree</field>
        <field name="model">subtype</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type"/>
                <field name="priority" widget="priority"/>
                <field name="name"/>
                
            </tree>
        </field>
    </record>

    <record id="e_ocean_ext.subtype_form" model="ir.ui.view">
        <field name="name">subtype.form</field>
        <field name="model">subtype</field>
        <field name="arch" type="xml">
            <form string="Sub types">
                <sheet>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="priority"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="count"/>
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
        
    </record>


    <!-- Action definition -->
    <record id="action_subtype" model="ir.actions.act_window">
        <field name="name">Subtype</field>
        <field name="res_model">subtype</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item definition -->
    <menuitem id="menu_subtype" name="Sub Types" parent="helpdesk.helpdesk_menu_config" action="action_subtype" sequence="11"/>
</odoo>
