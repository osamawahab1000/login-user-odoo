<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="helpdesk_ticket_inherited_form" model="ir.ui.view">
            <field name="name">helpdesk.ticket.inherited.form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">
            
                <field name="team_id" position="after">
                    <field name="ticket_unique" invisible="company_id != 1"/>
                </field>
                <field name="user_id" position="after">
                    <field name="responsible_user" invisible="company_id != 1"/>
                    <field name="department_id" invisible="company_id != 1"/>
                </field>
                
                <field name="ticket_type_id" position="after">
                    <field name="subtype" widget="many2many_tags" invisible="company_id != 1"/>
                    <!-- <field name="responsible_department" widget="many2many_tags"/> -->

                </field>
                <field name="partner_id" position="after">
                    <field name="parent_company" invisible="company_id != 1"/>

                    <!-- <field name="requisition_type"/> -->
                </field>
                <field name="email_cc" position="after">
                    <field name="ticket_no" invisible="company_id != 1"/>
                    <field name="closed_by" invisible="company_id != 1"/>
                    
                    <field name="agent_response_date" invisible="company_id != 1"/>
                    <field name="date_close" invisible="company_id != 1"/>
                    <field name="to_inprogress_time" invisible="company_id != 1"/>
                    <field name="to_onhold" invisible="company_id != 1"/>
                    
                </field>

                <field name="tag_ids" position="after">
                    <!-- to_solved
                    solved_to_closedtime -->
                    <field name="to_solved" invisible="company_id != 1"/>
                    <field name="solved_to_closedtime" invisible="company_id != 1"/>
                    <field name="to_reopen" invisible="company_id != 1"/>
                    
                    
                </field>
                
                <!-- <xpath expr="//field[@name='active']" position="after">
                    <field name="id"/>
                </xpath> -->
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="create_date" invisible="company_id != 1"/>
                    <field name="create_uid" invisible="company_id != 1"/>
                </xpath>

                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="ticket_ref" string="Ticket Reference" invisible="company_id != 1"/>
                </xpath>

                <xpath expr="//field[@name='agent_response_date']" position="after">
                    <field name="date_last_stage_update" invisible="company_id != 1"/>
                    <field name="write_date" invisible="company_id != 1"/>
                    <field name="sla_fail" force_save="0" readonly="False" invisible="company_id != 1"/>
                    <field name="sla_deadline_hours" invisible="company_id != 1"/>
                    <field name="write_uid" invisible="company_id != 1"/>
                </xpath> 

                <xpath expr="//field[@name='solved_to_closedtime']" position="after">
                    <field name="source_id" invisible="company_id != 1"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_email" invisible="company_id != 1"/>
                </xpath>

                <field name="source_id" position="after">
                    <field name="department_id" widget="many2one_tags" invisible="company_id != 1"/>
                    <field name="ticket_method" invisible="company_id != 1"/>

                    <!-- <field name="requisition_type"/> -->
                </field>
                
            </field>
        </record>

