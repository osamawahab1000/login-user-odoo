        <record id="helpdesk_sla_inherited_form" model="ir.ui.view">
            <field name="name">helpdesk.sla.inherited.form</field>
            <field name="model">helpdesk.sla</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_sla_view_form"/>
            <field name="arch" type="xml">
            
                <field name="ticket_type_ids" position="after">
                    <field name="subtype_ids" widget="many2many_tags" invisible="company_id != 1"/>
                    
                </field>
                <field name="stage_id" position="after">
                    <field name="start_stage" invisible="company_id != 1"/>
                </field>
            </field>
        </record>
  </data>
