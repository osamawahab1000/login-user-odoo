<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

<!--     Admin Email Template -->
    <record id="onboarding_admin_email_template" model="mail.template">
        <field name="name">Admin Onboarding Notification</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="subject">Onboarding Task: Admin Arrangements for ${object.name}</field>
        <field name="email_to">${object.admin_user_id.email}</field>
        <field name="body_html" type="html">
            <![CDATA[
                <p>Dear ${object.admin_user_id.name},</p>
                <p>Please ensure the following onboarding arrangements are made:</p>
                <ul>
                    <li>Confirm seating arrangements</li>
                    <li>Provide gift box, laptop, and accessories</li>
                    <li>Arrange lunch for the new joiner</li>
                </ul>
                <p><strong>Employee:</strong> ${object.name}<br/>
                   <strong>Joining Date:</strong> ${object.joining_date}</p>
            ]]>
        </field>
    </record>

